<div class="header_picture h-100" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/373076/pexels-photo-373076.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940);">
  <h2 class="text-black text-center text-white mb-5">Find your next Job</h2>
  <div class="row col-md-10 pl-5 ml-5">
    <div class="col-md-4 pl-5 ml-5">
      <%= form_tag jobs_path, method: :get do %>
      <%= text_field_tag :job_name,
        params[:query],
        class: "form-control",
        placeholder: "Enter job title", value: @job_name_value %>
    </div>
    <div class="col-md-1 ml-3 mr-5">
      <%= select(:query, :city, @job_cities, include_blank: "City", selected: @job_cities_value ? @job_cities_value : "") %>
    </div>
    <div class="col-md-3 mr-3">
      <%= select(:query, :department, @job_categories, selected: @job_categories_value ? @job_categories_value : "", include_blank: "Department") %>
    </div>
    <div class="col-md-2 ml-4">
      <%= submit_tag "Search", class: "btn" %>
    </div>
    <% end %>
  </div>
</div>
<div class="container col-md-10 mt-3">
  <% if @jobs.length == nil %>
    <p> No Jobs match your search </p>
  <% else %>
    <h4 class="mb-3"><%=@jobs.length%> Jobs match your search </h4>
  <% end %>
  <div class="card-deck">
    <% @jobs.each do |job| %>
    <div class="card mb-4 pt-4">
      <div class="card-body">
        <div class="row">
          <div class="col-md-10">
            <h3 class="card-title text-left"> <%= job.title %></h3>
            <h5 class="card-text"> <%=job.location%></h5>
            <h5> <%=job.category%> Department</h5>
          </div>
          <div class="col-md-2">
            <%= link_to 'More Info', job_path(job), class: "btn mt-4 ml-5" %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

