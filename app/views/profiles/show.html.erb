<div class="header_picture h-25" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/273230/pexels-photo-273230.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940);">
  <h2 class="text-black text-center text-white">Find your next Job</h2>
</div>
<div class="row mt-4">
<%= link_to "Back", jobs_path, class: "btn btn-secondary w-20 h-25 ml-5 mr-0 mt-3"%>
  <div class="container p-3 w-100 ml-4">
    <div class="card p-5 ml-5">
      <div class="col-md-12 text-justify pl-1 pr-4">
        <div class="d-flex justify-center mr-0 mb-2">
          <h2>Hi <%=@user.first_name %>, this is your Profile</h2>
        </div>
        <div class="flex-fill row justify-content-between ml-0 mr-0">
          <div class="flex-fill bd-highlight w-50 mb-2 pl-2"><h5><i class="fas fa-user mr-3"></i><%=@user.first_name %> <%=@user.last_name %></h5></div>
        </div>
        <div class="flex-fill row justify-content-between ml-0 mr-0">
          <div class="flex-fill bd-highlight w-50 mb-2 pl-2"><h5><i class="fas fa-envelope mr-3"></i><%=@user.email %> </h5></div>
          <div class="flex-fill bd-highlight w-50 mb-2 pl-5"><h5><i class="fas fa-graduation-cap mr-2"></i><%=@user.highest_education_attained %> </h5></div>
        </div>
        <div class="flex-fill row justify-content-between ml-0 mr-0">
          <div class="flex-fill bd-highlight w-50 mb-2 pl-2"><h5><i class="fas fa-phone mr-3"></i><%=@user.telephone %> </h5></div>
          <div class="flex-fill bd-highlight w-50 mb-2 pl-5"><h5><i class="fas fa-file mr-3"></i><%=@user.grade_point_average %> </h5></div>
        </div>
      </div>
      <%= link_to 'Edit Profile', edit_user_registration_path, class: "btn h-100 mr-0 mt-5" %>
    </div>
  </div>
</div>
<div class="container col-md-10 mt-3">
  <% if @favorite_jobs.length == nil %>
    <p class="section-title mt-5 mb-5"> No Jobs saved </p>
  <% else %>
    <h4 class="section-title mt-5 mb-5"><%=@favorite_jobs.length%> saved jobs </h4>
  <% end %>
    <div class="row">
      <div class="card-deck">
        <% @favorite_jobs.each do |job| %>
        <div class="card mb-4 pt-4">
          <div class="card-body">
            <div class="row">
              <div class="col-md-10">
                <h3 class="card-title text-left"> <%= job.title %></h3>
                <h4 class="card-text"> <i class="fas fa-map-marker-alt mr-2"> </i><%=job.location%></h4>
                <h5> <%=job.category%> Department</h5>
              </div>
              <div class="col-md-2">
                <%= link_to 'More Info', job_path(job), class: "btn mt-4 ml-5" %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
</div>
<%# cl_image_tag(current_user.cv.key, :width => 200, :height => 250) %>
