<%= render 'shared/navbar' %>
<div class="row">
  <%= link_to "Back" , jobs_path, class: "btn btn-secondary w-20 h-25 ml-5 mr-0 mt-3"%>
  <div class="container p-3 w-100 ml-4">
    <div class="card p-5">
      <div class="text-center pb-3">
        <h1>Update your Profile <%=@user.first_name%>!</h1>
      </div>
      <div class="text-align-center">
        <%= simple_form_for(@user, url: profile_update_path, method: :patch) do |f| %>
        <div class="flex-fill row justify-content-between ml-0 mr-0 bg-white">
          <div class="flex-fill bd-highlight w-50 pr-3"> <%= f.input :first_name %> </div>
          <div class="flex-fill bd-highlight w-50 pl-3"> <%= f.input :last_name %> </div>
        </div>
        <div class="flex-fill row justify-content-between ml-0 mr-0 bg-white">
          <div class="flex-fill bd-highlight w-50 pr-3"> <%= f.input :email %> </div>
          <div class="flex-fill bd-highlight w-50 pl-3"> <%= f.input :password %> </div>
        </div>
          <div class="flex-fill row justify-content-between ml-0 mr-0 bg-white">
          <div class="flex-fill bd-highlight mr-2"> <%= f.input :telephone %> </div>
          <div class="flex-fill bd-highlight ml-3"> <%= f.input :grade_point_average %> </div>
          <div class="flex-fill bd-highlight ml-4"> <%= f.input :highest_education_attained %> </div>
        </div>
      </div>
      <%= f.input :cv, as: :file %>
      <br>
      <div class="row">
        <div class="col-md-12 text-center">
          <%= f.submit "Save changes", class: "btn btn-gradient w-75 pt-2 pb-2" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
